<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_game"
    app:cardBackgroundColor="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        android:padding="15sp"
        android:background="@color/card_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_my_game_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game: Name"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/card_text"
                android:textStyle="bold"
                android:layout_marginTop="15dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_my_game_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/btn_text"
                android:backgroundTint="@color/btn_background" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/text_game_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rank\t\t\t\t\tIron"
            android:textColor="@color/card_text"/>

        <TextView
            android:id="@+id/text_game_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server(s)\t\tSEA"
            android:textColor="@color/card_text"/>

        <TextView
            android:id="@+id/text_game_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Role(s)\t\t\tController/Duelist"
            android:textColor="@color/card_text"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>