<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.userprofile.UserProfileGamesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <!--  Valorant  -->
        <TextView
            android:id="@+id/tv_user_game_valorant_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valorant"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_user_game_valorant_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/silver"
            android:text="Rank\t\t\t\t\tIron\nServer(s)\t\tSEA\nRole(s)\t\t\t\tController/Duelist"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_user_game_valorant_label" />

        <!--  League of Legends  -->
        <TextView
            android:id="@+id/tv_user_game_lol_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="League of Legends"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_game_valorant_content" />
        <TextView
            android:id="@+id/tv_user_game_lol_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rank\t\t\t\t\tGold\nServer(s)\t\tPH/NA\nRole(s)\t\t\t\tTank/Support"
            app:layout_constraintTop_toBottomOf="@id/tv_user_game_lol_label"
            android:textColor="@color/black"
            android:background="@color/silver"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>