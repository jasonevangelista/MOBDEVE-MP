<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_player_review"
    app:cardBackgroundColor="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15sp"
            android:layout_marginTop="20sp"
            android:background="@color/card_background">

            <!--   linear layout for rating and review date        -->
<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal">-->
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    -->
<!--                -->
<!--            </LinearLayout>-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_review_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RATING HERE"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/card_text"/>

                <TextView
                    android:id="@+id/tv_review_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REVIEW DATE HERE"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/card_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- player name-->
            <TextView
                android:id="@+id/tv_reviewer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player_2"
                android:textStyle="bold"
                android:textColor="@color/card_text"/>

            <!-- review content -->
            <TextView
                android:id="@+id/tv_review_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Great teammate!!!"
                android:textColor="@color/card_text"/>

        </LinearLayout>


</androidx.cardview.widget.CardView>